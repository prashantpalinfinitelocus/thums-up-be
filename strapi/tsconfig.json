{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "tsBuildInfoFile": "./.cache/tsbuildinfo.server.json",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "./src",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.ts",
    "src/plugins/**"
  ]
}
